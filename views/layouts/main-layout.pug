doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title #{title}
    link(rel='stylesheet' href='/css/main.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/owl.carousel.min.css')
    link(rel='stylesheet' href='/css/owl.theme.default.min.css')
  body
    header
      .default-nav.container.mt-4(style='display: block;')
        .row.pt-2.pb-2
          .col-2.text-left.p-0.pt-2
            a.facebook(href='#')
              .facebook-logo
            a.twitter(href='#')
              .twitter-logo
            a.instagram(href='#')
              .instagram-logo
          .col
            h2.text-center
              b House
              | Store
          .col-2.text-right.p-0.pt-2
            a.search(href='#')
              .search-logo
            a.basket(href='#')
              .basket-logo
            a.list(href='#')
              .list-logo
        .row
          .col
            nav.navbar.navbar-expand.navbar-light.standart-nav
              #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mx-auto
                  li.nav-item
                    a.nav-link(href='/') Home
                  li.nav-item.show-men-category
                    a.nav-link.dropdown-toggle(href='/categories/Men') Men
                    include ../includes/men-category
                  li.nav-item.show-women-category
                    a.nav-link.dropdown-toggle(href='/categories/Women') Women
                    include ../includes/women-category
                  li.nav-item.show-other-category
                    a.nav-link.dropdown-toggle(href='/services') Other Pages
                    .container.closed-category.other-category.p-3(style='background-color: white; display: none;')
                      .row
                        .col
                          ul
                            li
                              a(href='/services')
                                | Services
                            li
                              a(href='/services')
                                | Other
                  li.nav-item
                    a.nav-link(href='/contact') Contact
            div.search-bar.p-2
              form(action="/search" method="GET")
                input(type="text" name="searchProduct" placeholder="Search Something" style="width:68%").form-control.float-left
                input(type="submit" value="Search").float-right.btn.btn-light
            if title=="Orders"
              div
            else
              div.basket-bar.p-2
                button.btn.btn-light.position-absolute.close-basket(style="right:5%; z-index:101") X
                .mt-5
                if basket.length>0
                  each product in basket
                    include ../includes/basket-item.pug
                  a(href="/orders").btn.btn-warning.text-white.float-right Order      
                else
                  h5.text-center.mb-4 Basket is empty 
            div.account-bar.p-2
              button.btn.btn-light.position-absolute.close-account-bar(style="right:5%; z-index:101") X
              if user
                .text-white.mt-5.pl-4
                  h4 #{user[0].name}
                  p #{user[0].email}
                  a(href="/logout").btn.btn-danger.float-right Logout 
              else
                a.btn.btn-light.w-100.mt-5(href="/account/login") Login
                a.btn.btn-light.mt-2.w-100(href="/account/register") Register

              
      .fixed-nav.pl-5.pr-5.pt-2.container(style='background-color:white;display: none;')
        .row
          .col-2.pt-2.p-0
            h2.text-center
              b House
              | Store
          .col-8
            nav.navbar.navbar-expand.navbar-light.standart-nav
              #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mx-auto
                  li.nav-item
                    a.nav-link(href='/') Home
                  li.nav-item.show-men-category
                    a.nav-link.dropdown-toggle(href='/categories/Men') Men
                    include ../includes/men-category.pug
                  li.nav-item.show-women-category
                    a.nav-link.dropdown-toggle(href='/categories/Women') Women
                    include ../includes/women-category.pug
                  li.nav-item.show-other-category
                    a.nav-link.dropdown-toggle(href='/services') Other Pages
                    .container.closed-category.other-category.p-3(style='background-color: white; display: none;')
                      .row
                        .col
                          ul
                            li
                              a(href='/services')
                                | Services
                            li
                              a(href='/services')
                                | Other
                  li.nav-item
                    a.nav-link(href='/contact') Contact
          .col-2.text-right.p-0.pt-2
            a.search(href='#')
              .search-logo
            a.basket(href='#')
              .basket-logo
            a.list(href='#')
              .list-logo
