extends layouts/main-layout.pug
block content
    main
        .container.mt-3.mb-3
            .row
                .col-3
                    #carouselExampleIndicators.carousel.slide(data-ride='carousel')
                        .carousel-inner(role='listbox')
                            .carousel-item.active
                                img.d-block.w-100(src=`${product.imageUrl1}` style="width:100%; height:300px;")
                            .carousel-item
                                img.d-block.w-100(src=`${product.imageUrl2}` style="width:100%; height:300px;")

                        a.carousel-control-prev(style="background-color:#333333; height:40px; top:42%" href='#carouselExampleIndicators' role='button' data-slide='prev')
                            span.carousel-control-prev-icon(aria-hidden='true')
                            span.sr-only Previous
                        a.carousel-control-next(style="background-color:#333333; height:40px; top:42%" href='#carouselExampleIndicators' role='button' data-slide='next')
                            span.carousel-control-next-icon(aria-hidden='true')
                            span.sr-only Next
                .col
                    h3 #{product.name}
                    p #{product.description}
                    if product.discount
                        h4(style="text-decoration:line-through;") #{product.price}$
                        h5(style="color:#F67280") #{product.discountPrice}$
                    else
                        h5 #{product.price}$
                    form(action=`/addToBasket` method="POST")
                        input(type="hidden" name="product" value=product)
                        button.btn.btn-dark(type="submit") Add To Basket
                            
